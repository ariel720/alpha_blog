<p id="notice"><%= notice %></p>
<h2 align="center">Title:<%= @comment.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
   <ul class="listing">
     <div class="row center">
       <div class=" col-md-4 col-md-offset-4">
         <li>Created bt:</li>
         <li class="article-title"> <%= link_to @comment.user.username,  @comment.user %> </li>
         <li><small><%= pluralize( @comment.user.comments.count,"comment") if  @comment.user.comments %></small></li>
       </div>
     </div>
   </ul>
  <h4 class="center description"><strong>Content:</strong></h4>
    <%=simple_format(@comment.content) %>
  <div class="article-actions">
<% if logged_in? && (current_user==@comment.user || current_user.admin?) %>      
     <%= link_to 'Edit', edit_comment_path(@comment),class:"btn btn-xs btn-primary" %> |
     <%= link_to 'Delete', comment_path(@comment), method: :delete, 
         data:{confirm: "are you sure you want?"},
         class:"btn btn-xs btn-danger" %> 
<% end %>    
    
    <%= link_to 'Back', comments_path %>
  </div>
</div>